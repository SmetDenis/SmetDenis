{
    "name"              : "smetdenis/readme",
    "type"              : "library",
    "description"       : "SmetDenis Profile readme file",
    "license"           : "MIT",

    "keywords"          : [
        "readme",
        "profile",
        "smetdenis"
    ],

    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "minimum-stability" : "dev",
    "prefer-stable"     : true,

    "require"           : {
        "php" : "^8.1"
    },

    "require-dev"       : {
        "jbzoo/toolbox-dev" : "^7.0",
        "jbzoo/markdown"    : "^7.0"
    },

    "autoload"          : {
        "psr-4" : {"SmetDenis\\Readme\\" : "src"}
    },

    "autoload-dev"      : {
        "psr-4" : {"SmetDenis\\PHPUnit\\" : "tests"}
    },

    "config"            : {
        "optimize-autoloader" : true,
        "allow-plugins"       : {"composer/package-versions-deprecated" : true}
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "7.x-dev"
        }
    }
}
